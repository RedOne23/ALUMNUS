          <h3><%= link_to chatroom.receiver_name, open_chatrooms_path(chatroom.receiver_id) %>&nbsp; </h3>
          <br>
          <% if chatroom.messages.present? %>
            <h5><%= chatroom.messages.last.content.truncate(30)%></h5>
          <% end %>
        </div>
      <% end %><br>
    <% end %>




</div>

