<h1>Chatrooms#index</h1>
<p>Find me in app/views/chatrooms/index.html.erb</p>
<ul>
  <% @chatrooms.each do |chatroom| %>
  <% if %>
  <% current_user.first_name == chatroom.receiver_name %>
  <div class="card-prod">
    <h2><%= link_to chatroom.sender_name, open_chatrooms_path(chatroom.sender_id) %>:&nbsp;</h2>
    <% if %>
      <% chatroom.messages.present? %>
      <h3><%= chatroom.messages.last.content%></h3>
    <% end %>
     </div>
  <% else %>
  <div class="card-prod">
    <h2><%= link_to chatroom.receiver_name, open_chatrooms_path(chatroom.receiver_id) %>:&nbsp; </h2>
    <% if %>
      <% chatroom.messages.present? %>
      <h3><%= chatroom.messages.last.content%></h3>
      <% end %>
  </div>
  <% end %><br>
  <% end %>


