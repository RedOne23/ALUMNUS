<div class="container">

  <%= form_tag users_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control my-3 ",
      placeholder: "Find an alumni"
    %>
    <%= submit_tag "Search", class: "btn btn-primary mb-3" %>
  <% end %>

</div>

<% if @prox_users.length > 0 %>

<div class="container">
  <h3 class=""mb-3"">Alumni around <strong><%= current_user.current_city %></strong></h3>
</div>

  <ul class="container">
    <% @prox_users.each do |user| %>
      <div class="card-product">
      <% if user.photo.attached? %>
      <%= cl_image_tag user.photo.key, crop: :scale %>
      <% end %>
    <div class="card-product-infos">
      <h2><%= user.first_name %> <%= user.last_name %></h2><p><%= link_to "Full Profile", user_path(user) %></p>
      <p><strong>Batch No</strong> <%= user.batch_number %></p>
      <p><strong>Current City:</strong> <%= user.current_city %></p>
      <p><strong>Batch date:</strong> <%= user.batch_date %></p>
      <p><%= user.occupation %> @<strong><%=user.company_name %></strong></p>

    </div>
  </div>
  <br>
    <% end %>
  </ul>

  <% else %>

    <div class="container mt-2">
      <h3 class="my-5">Sorry there is no Alumni around you for now ...</h3>
    </div>
  <% end %>


  <div class="grey-separator"></div>
  <div class="container">
    <h3 class="mb-3">Alumni all over <strong>the world</strong></h3>
  </div>

    <ul class="container">
    <% @users.each do |user| %>
      <div class="card-product">
      <% if user.photo.attached? %>
      <%= cl_image_tag user.photo.key, crop: :scale %>
      <% end %>
    <div class="card-product-infos">
      <h2><%= user.first_name %> <%= user.last_name %></h2><p><%= link_to "Full Profile", user_path(user) %></p>
      <p><strong>Batch No</strong> <%= user.batch_number %></p>
      <p><strong>Current City:</strong> <%= user.current_city %></p>
      <p><strong>Batch date:</strong> <%= user.batch_date %></p>
      <p><%= user.occupation %> @<strong><%=user.company_name %></strong></p>

    </div>
  </div>
  <br>
    <% end %>
  </ul>
