
<% if current_user.id == message.user_id %>
  <div class="message-container speech-bubbly" id="message-<%= message.id %>">
    <i class="author">
      <span><%= message.user.first_name %> <%= message.user.last_name %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>
<% else %>
  <div class="message-container speech-bubble" id="message-<%= message.id %>">
    <i class="author">
      <span><%= message.user.first_name %> <%= message.user.last_name %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>
<% end %>
