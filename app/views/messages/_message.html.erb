<div class="message-container <%= message.user == current_user ? "speech-bubbly" :  "speech-bubble" %>" data-user-id=<%= message.user.id %> id="message-<%= message.id %>">
  <i class="author">
    <span><small><%= message.user.first_name %> <%= message.user.last_name %></span></small>
    <small> | <%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p class= "message-content"><%= message.content %></p>
</div>
